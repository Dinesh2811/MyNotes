<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/etDecryptionKeyInputLayout"
        style="@style/style_TextInputLayout"
        android:hint="Please enter the decryption key"
        app:helperTextEnabled="true"
        app:helperText="*Decryption key must have 44 character"
        app:counterMaxLength="44"
        app:endIconMode="custom"
        app:endIconDrawable="@drawable/baseline_content_paste_24"
        app:helperTextTextColor="@color/design_default_color_error"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etDecryptionKey"
            style="@style/style_TextInputEditText"
            android:maxLength="44"
            android:textSize="14sp" />

    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/btnCancelDecryption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:text="Cancel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etDecryptionKeyInputLayout" />

    <Button
        android:id="@+id/btnDecryptionKey"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:text="Ok"
        app:layout_constraintBottom_toBottomOf="@+id/btnCancelDecryption"
        app:layout_constraintEnd_toStartOf="@+id/btnCancelDecryption"
        app:layout_constraintTop_toTopOf="@+id/btnCancelDecryption" />

</androidx.constraintlayout.widget.ConstraintLayout>